---
interface HeaderButtonProps {
  href: string;
}

const { href } = Astro.props;
---

<a
  href={href}
  class="flex flex-row items-center justify-center space-y-2
  px-6
  py-3
  text-sm
  font-medium
  text-white
  bg-gray-800
  rounded-lg
  shadow
  hover:bg-gray-700
  focus:outline-none
  focus:ring-2
  focus:ring-gray-600
  focus:ring-offset-2
  transition-all"
>
  <slot name="before" />
  <slot />
  <slot name="after" />
</a>
